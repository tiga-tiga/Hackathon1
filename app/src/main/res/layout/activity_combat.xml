<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.wc.superheroesfighters.Combat">

    <ImageView
        android:id="@+id/hero_view"
        android:layout_width="103dp"
        android:layout_height="98dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/enemy_view"
        android:layout_width="108dp"
        android:layout_height="102dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/hero_physic_attack"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/heo_special_attack"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/fist" />

    <ImageView
        android:id="@+id/enemy_physic_attack"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/enemy_view"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fist" />

    <ImageView
        android:id="@+id/hero_special_attack"
        android:layout_width="70dp"
        android:layout_height="74dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/special"
        tools:layout_editor_absoluteX="106dp" />

    <ImageView
        android:id="@+id/enemy_special_attack"
        android:layout_width="70dp"
        android:layout_height="74dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/enemy_physic_attack"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/special" />

    <ImageView
        android:id="@+id/hero_mental_attack"
        android:layout_width="73dp"
        android:layout_height="76dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hero_view"
        app:layout_constraintStart_toEndOf="@+id/heo_special_attack"
        app:srcCompat="@drawable/mantal" />

    <ImageView
        android:id="@+id/enemy_mental_attack"
        android:layout_width="73dp"
        android:layout_height="76dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/enemy_special_attack"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mantal" />

    <TextView
        android:id="@+id/enemy_life_bar"
        android:layout_width="92dp"
        android:layout_height="25dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="138dp" />

    <TextView
        android:id="@+id/heo_life_bar"
        android:layout_width="95dp"
        android:layout_height="23dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="374dp" />

</android.support.constraint.ConstraintLayout>
